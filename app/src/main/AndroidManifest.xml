<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.room8">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".ui.todolist.todomvp3.addedittodoitem.AddEditToDoItemActivity" />
        <activity android:name=".ui.expenses.addeditexpenseitem.AddEditExpenseItemActivity" />

        <provider
            android:name=".ui.todolist.todomvp3.data.ToDoProvider"
            android:authorities="com.example.room8.ui.todolist.todomvp3.data"
            android:enabled="true"
            android:exported="true" />

    </application>

</manifest>